<%= form_with url: "/flights", method: :get do |form| %>
  <div>
  <%= form.label :departure_airport_id, "Departure airport:" %>
  <%= select_tag(:departure_airport_id, options_for_select(@airports)) %>
</div>
<div>
  <%= form.label :arrival_airport_id, "Arrival airport:" %>
  <%= select_tag(:arrival_airport_id, options_for_select(@airports)) %>
</div>
<div>
  <%= form.label :departure_date, "Date of departure:" %>
  <%= select_tag(:departure_date, options_for_select(@dates)) %>
</div>
<div>
  <%= form.label :arrival_date, "Date of arrival:" %>
  <%= select_tag(:arrival_date, options_for_select(@dates)) %>
</div>
  <%= form.submit "Search" %>
<% end %>
<% @flights.each do |flight|%>
  <div class="flight">
    <h1>
    Departure:
      <%= flight.departure_airport.code %>
    </h1>
    <h1>
      Arrival
      <%= flight.arrival_airport.code %>
    </h1>
    <h2>
      Duration
      <%= flight.duration %>
    </h2>
  </div>
<% end %>
