<%= form_with url: "/flights/", method: :get do |form| %>
  <div>
  <%= form.label :departure_airport_code, "Departure airport:" %>
  <%= select_tag(:departure_airport_code, options_for_select(@airports, params[:departure_airport_code])) %>
</div>
  <div>
  <%= form.label :arrival_airport_code, "Arrival airport:" %>
  <%= select_tag(:arrival_airport_code, options_for_select(@airports, params[:arrival_airport_code])) %>
</div>
<div>
  <%= form.label :num_tickets, "How many people:" %>
  <%= select_tag(:num_tickets, options_for_select( 4.times.map {|i| [i + 1, i + 1]}, params[:num_tickets])) %>
</div>
<div>
  <%= form.label :departure_date, "Date of departure:" %>
<%= select_tag(:departure_date, options_for_select(@dates, params[:departure_date]), include_blank: true) %>
</div>
  <%= form.submit "Search" %>
<% end %>
<%= link_to "All flights", flights_path %>
<% if @no_found %>
    <%= @no_found %>
<% end %>
<% @flights.each do |flight|%>
  <div class="flight">
    <h1>
    Departure:
      <%= flight.departure_airport.code %>
    </h1>
    <h1>
      Arrival
      <%= flight.arrival_airport.code %>
    </h1>
    <h2>
      Duration
      <%= flight.duration %>
    </h2>
  </div>
<% end %>